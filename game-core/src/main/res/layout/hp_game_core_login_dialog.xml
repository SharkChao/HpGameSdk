<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="254dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/hp_game_core_bg_icon"/>
    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#24262B"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="系统检测到虎扑账号" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="268dp"
        android:layout_height="44dp"
        android:text="立即登陆"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:gravity="center"
        android:background="@drawable/hp_game_core_dialog_btn_bg"
        android:layout_marginTop="24dp"
       android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_tip"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_login"
        android:layout_alignRight="@id/tv_login"
        android:layout_below="@id/tv_login"
        android:layout_marginTop="24dp"
        android:gravity="left"
        android:textSize="11sp"
        android:textColor="#89909F" />
</RelativeLayout>