<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="254dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@mipmap/hp_game_core_bg_icon"/>
    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000"
        android:layout_marginTop="14dp"
        android:text="系统检测到虎扑账号"
        app:layout_constraintLeft_toLeftOf="@id/tv_login"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="268dp"
        android:layout_height="44dp"
        android:text="立即登陆"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:gravity="center"
        android:background="@drawable/hp_game_core_dialog_btn_bg"
        android:layout_marginTop="46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tip"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_login"
        app:layout_constraintRight_toRightOf="@id/tv_login"
        android:layout_marginTop="24dp"
        android:gravity="left"
        android:textSize="11sp"
        android:textColor="#89909F" />
</androidx.constraintlayout.widget.ConstraintLayout>