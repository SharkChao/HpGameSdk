<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/hp_game_core_certification_back"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实名认证"
            android:textColor="#262626"
            android:textSize="17sp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E5E5E5"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
        android:layout_below="@id/rl_top"
        android:text="亲爱的用户：\n根据国家要求，所有网络游戏需要接入国家实名验证系统，实名认证通过后方可进入游戏。Hupu游戏【健康系统】现已全面升级，请谨慎填写您真实的实名信息以获得完整游戏体验。"
        android:textSize="14sp"
        android:textColor="#24262B"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="24dp"/>
    <EditText
        android:id="@+id/tv_name"
        android:layout_alignLeft="@id/tv_desc"
        android:layout_alignRight="@id/tv_desc"
        android:layout_below="@id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:textColor="#262626"
        android:singleLine="true"
        android:textColorHint="#CED2D9"
        android:hint="请填写真实姓名"/>

    <EditText
        android:id="@+id/tv_card"
        android:layout_alignLeft="@id/tv_desc"
        android:layout_alignRight="@id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:singleLine="true"
        android:textColor="#262626"
        android:textColorHint="#CED2D9"
        android:hint="身份证号"/>

    <TextView
        android:id="@+id/tv_post"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignLeft="@id/tv_desc"
        android:layout_alignRight="@id/tv_desc"
        android:layout_below="@id/tv_card"
        android:layout_marginTop="30dp"
        android:text="确 认"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="#D7312E"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="切换账号"
        android:textSize="12sp"
        android:textColor="#2F6EEB"
        android:layout_marginBottom="66dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>